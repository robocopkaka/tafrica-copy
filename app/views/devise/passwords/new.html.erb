<div id="forgot-password-page">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { id: "forgot-password-form" }) do |f| %>
    <h2 id="forgot-password-header">Forgot your password?</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="button-group">
      <%= f.submit "Send me reset password instructions", class: "btn" %>
    </div>

    <div id="shared-links">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
